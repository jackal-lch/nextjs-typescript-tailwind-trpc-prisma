{
  // add default lint settings
  "extends": ["next", "next/core-web-vitals", "eslint:recommended"],
  // always defined "React" even it's not imported
  "globals": {
    "React": "readonly"
  },
  // personal rules that prefix variables with _ if it's not used but declared
  "rules": {
    "no-unused-vars": [1, { "args": "after-used", "argsIgnorePattern": "^_" }]
  }
}
